<h1>Car#edit</h1>
<h1>New Article</h1>

<%= render "edit", car: @car %>

<%= form_with model: @car do |form| %>
  <div>
    <%= form.label :title %><br>
    <%= form.collection_select :provider_id, @producers, :id, :name %>
  </div>

  <div>
    <%= form.label :body %><br>
    <%= form.text_area :body %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>

<%= link_to "Neues Auto", new_car_path(@car) %>
<%= link_to "Auto anpassen", edit_car_path %>
